<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="error">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%msg"/>
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="com.sync.counter" level="info">
            <AppenderRef ref="Console"/>
        </Logger>
        <Root level="fatal">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>